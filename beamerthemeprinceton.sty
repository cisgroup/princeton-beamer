% Create new iframe environment
% -----------------------------

\newlength{\iframe@xshift}
\newlength{\iframe@yshift}


\define@key{iframe}{image}{\def\iframe@image{#1}}%
\define@key{iframe}{xshift}{\setlength\iframe@xshift{#1}}
\define@key{iframe}{yshift}{\setlength\iframe@yshift{#1}}
\define@key{iframe}{opacity}{\def\iframe@opacity{#1}}%
    
\setkeys{iframe}{image=example-image-a,xshift=0pt,yshift=0pt,opacity=1}%


% Optional argument will be split between <;>
% Everything before will be beamer options
% Everything after will be iframe options
\NewDocumentEnvironment{iframe}{d<> >{\SplitArgument{1}{;}} o m o}{% 
  % Assign key values to beamerframe and iframe
  \IfValueT{#2}{\iframe@setkeys #2}%
    % If optional arguments are given use them
    \IfValueT{#4}{\setkeys{iframe}{#4}}%

  % \IfValueF{#1}{\IfValueF{#3}{}}%
    \backgroundimage[%
    xshift=\iframe@xshift,
      yshift=\iframe@yshift,
        opacity=\iframe@opacity,
      ]{\iframe@image}%

    \IfValueTF{#1}{% True Overlay
    \IfValueTF{#3}{% True Title
      \begin{frame}<#1>[fragile,environment=iframe]{#3}
      }{% False Title
        \begin{frame}<#1>[fragile,environment=iframe]
        }}{% False Overlay
     \IfValueTF{#3}{% True Title
      \begin{frame}[fragile,environment=iframe]{#3}
      }{% False Overlay
        \begin{frame}<#1>[fragile,environment=iframe]
        }%
      }%
}{%
  % \iframe@image #3% #1% #4 #3
  \end{frame} 
}



% Internal Function to deal with the spitted arguments
\def\iframe@setkeys#1#2{%
    \presetkeys{beamerframe}{#1}{}
    \IfValueT{#2}{\setkeys{iframe}{#2}}
  }


% Create section frame command
% ----------------------------

\newif\ifsectionframe@contour
\sectionframe@contourfalse
  
\define@key{sectionframe}{image}{\def\sectionframe@image{#1}}%
\define@key{sectionframe}{opacity}{\def\sectionframe@opacity{#1}}%
\define@key{sectionframe}{color}{\def\sectionframe@color{#1}}%
\define@key{sectionframe}{contourcolor}{\def\sectionframe@contourcolor{#1}}%
\define@key{sectionframe}{contourlength}{\def\sectionframe@contourlength{#1}}%
\define@key{sectionframe}{contour}[true]{%
  \csname sectionframe@contour#1\endcsname
}


\setkeys{sectionframe}{image=example-image-a,opacity=1,color=black, contourcolor=white, contourlength=1.4pt}%

\NewDocumentCommand{\sectionframe}{s o m o o}{
  \IfValueT{#4}{\setkeys{sectionframe}{#4}}
  {
  \backgroundimage[%
  opacity=\sectionframe@opacity,
  ]{\sectionframe@image}%
  \contourlength{\sectionframe@contourlength}
  \begin{frame}
    \begin{tikzpicture}[remember picture,overlay]
      \node[anchor= south west,align=left,inner sep=0pt,font={\normalsize\bf},\sectionframe@color] (p1)
      at ($(current page.west)+(6mm,-25.5mm)$)
      {
        \IfValueT{#2}{\textit{
            \ifsectionframe@contour\contour{\sectionframe@contourcolor}{#2}\else#2\fi
          }
        }
      };
      \node[anchor= south west,align=left,inner sep=0pt,font={\LARGE},\sectionframe@color] (p1)
      at ($(current page.west)+(5.7mm,-31mm)$)
      {\textbf{
          \ifsectionframe@contour\contour{\sectionframe@contourcolor}{#3}\else#3\fi
        }};
    \end{tikzpicture}
    \IfValueT{#5}{\footlineextra{#5}}
    \note{}
  \end{frame}
  }
}
  

  
